---
const {img, title, description, class: className, button} = Astro.props;
---

<div class:list={["card image-full shadow-xl", className]}>
    {img && (
    <figure>
        <img src={img} alt={img}>
    </figure>
    )}
    <div class="card-body font-bold">
        <h2 class="card-title text-2xl">{title}</h2>
        <p class="text-m">{description}</p>
        <div class="card-actions">
            {button && (
            <a href="/#" class="btn btn-ghost btn-sm font-bold">Learn More</a>
            )}
        </div>
    </div>
</div>

<style>
.card.image-full:before {
    background-color: #5e5252;
    opacity: 0.5;
}

.card > .card-body {
    color: #fff;
}

@media (hover: hover) {
    .btn-ghost:hover {
        border-color: transparent;
    }
    @supports (color: oklch(0% 0 0)) {
        .btn-ghost:hover {
            background-color: #97522c;
        }
    }
}


</style>
